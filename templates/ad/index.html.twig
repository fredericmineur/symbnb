{% extends 'base.html.twig' %}

{% block title %}Our adverts{% endblock %}

{% block body %}
<div class="container">
    <h1 class = "my-3">Here are the adverts from our hosts</h1>
    <div class="row">
        {% for ad in ads %}
            {% set url = path('ad_show', {'slug': ad.slug}) %}
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-head text-center">
                            {{ad.rooms}} rooms, <strong>{{ad.price}}&euro; / night</strong> <br>
                            <small>No rating yet</small>
                    </div>

                    <a href="{{url}}">
                        <img src="{{ad.coverImage}}" alt="Accommodation image"
                        style="height: 200px; width: 100%; display: block">
                    </a>

                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{url}}">
                            {{ad.title}}
                            </a>
                        </h4>
                        <p class="card-text">
                            {{ad.introduction}}
                        </p>
                        <a href="{{url}}" class="btn btn-secondary">More info</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
